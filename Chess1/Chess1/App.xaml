<Application x:Class="Chess1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Chess1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="BoardOutLine" Color="#423936" />
            <SolidColorBrush x:Key="OddTile" Color="#A23B3B" />
            <SolidColorBrush x:Key="EvenTile" Color="#FAE8C8" />
            <Style x:Key="ChessPieces" TargetType="Path">
                <Setter Property="Fill" Value="#2D171A" />
                <Setter Property="Stretch" Value="Uniform" />
            </Style>
            <Style x:Key="Pawn" TargetType="Path" BasedOn="{StaticResource ChessPieces}">
                <Setter Property="Width" Value="70"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="Canvas.Left" Value="8"/>
                <Setter Property="Canvas.Top" Value="8"/>
                <Setter Property="Data" Value=""/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
